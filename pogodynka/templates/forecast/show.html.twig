{% extends 'base.html.twig' %}

{% block title %}Forecast{% endblock %}

{% block body %}
    <h1>Forecast</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Location</th>
                <td>{{ forecast.location.city }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ forecast.id }}</td>
            </tr>
            <tr>
                <th>WindSpeed</th>
                <td>{{ forecast.windSpeed }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ forecast.temperature }}</td>
            </tr>
            <tr>
                <th>Cloudiness</th>
                <td>{{ forecast.cloudiness }}</td>
            </tr>
            <tr>
                <th>Timestamp</th>
                <td>{{ forecast.timestamp ? forecast.timestamp|date('Y-m-d') : '' }}</td>
            </tr>
            
        </tbody>
    </table>

    <a href="{{ path('app_forecast_index') }}">back to list</a>

    <a href="{{ path('app_forecast_edit', {'id': forecast.id}) }}">edit</a>

    {{ include('forecast/_delete_form.html.twig') }}
{% endblock %}
